autodetach on
startup_message off
crlf off
defscrollback 10000
bell_msg "^G"
defkanji utf-8
defencoding utf-8
encoding utf-8 utf-8
escape ^Jj
pow_detach_msg "Screen session of \$LOGNAME \$:cr:\$:nl:ended."
vbell off
caption always "%{= wb} %-w%{=bu dr}%n %t%{-}%+w %= %{=b wk} [%l] %{=b wb}%y/%m/%d(%D) %{=b wm}%c"
bind n screen
bind h prev
bind j next
bind l windowlist
bind k kill
bind q quit
