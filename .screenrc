autodetach on
altscreen on
startup_message off
crlf off
defscrollback 10000
bell_msg "^G"
encoding utf-8 utf-8
defkanji utf-8
defencoding utf-8
escape ^Jj
pow_detach_msg "Screen session of \$LOGNAME \$:cr:\$:nl:ended."
vbell off
caption always "%{= bw} %-w%{=b cw}%n %t%{-}%+w %= %{=b gw}%y/%m/%d"
bind n screen
bind h prev
bind k next
bind l windowlist
bind q kill
termcapinfo xterm* ti@:te@
shell -$SHELL

bufferfile $HOME/.screen_exchange
bindkey -m ' ' eval 'stuff \040' writebuf 'exec sh -c "cat $HOME/.screen_exchange | pbcopy"'
