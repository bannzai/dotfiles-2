autodetach on
altscreen on
startup_message off
crlf off
defscrollback 10000
bell_msg "^G"
encoding utf-8 utf-8
defkanji utf-8
defencoding utf-8
escape ^Jj
pow_detach_msg "Screen session of \$LOGNAME \$:cr:\$:nl:ended."
vbell off
caption always "%{= mw} %-w%{=b cw}%n %t%{-}%+w %= %{=b mw}%y/%m/%d"
bind n screen
bind h prev
bind j next
bind l windowlist
bind k kill
bind q quit
termcapinfo xterm* ti@:te@
